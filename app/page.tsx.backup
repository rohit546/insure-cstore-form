                  {...register('noOfMPDs', { required: true })}
                  type="number"
                  placeholder="8"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Hours of Operation *
                </label>
                <input
                  {...register('hoursOfOperation', { required: true })}
                  type="text"
                  placeholder="24/7 or 6 AM - 11 PM"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                />
              </div>
            </div>
            </div>
          </div>
        )}

        {/* Step 3: Coverage */}
        {currentStep === 3 && (
          <div className="space-y-12">
            <div className="bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-900">
              <div className="flex items-center mb-6">
                <div className="w-12 h-12 bg-black rounded-xl flex items-center justify-center mr-4">
                  <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <h2 className="text-3xl font-black text-black">Coverage Requirements</h2>
              </div>
            
            <div className="space-y-6">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                    Effective Date *
                  </label>
                  <input
                    {...register('effectiveDate', { required: true })}
                    type="date"
                    className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                  />
                </div>

                <div>
                  <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                    Expiration Date *
                  </label>
                  <input
                    {...register('expirationDate', { required: true })}
                    type="date"
                    className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                  />
                </div>
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Building Limit *
                </label>
                <input
                  {...register('buildingLimit', { required: true })}
                  type="text"
                  placeholder="$500,000"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Contents Limit *
                </label>
                <input
                  {...register('contentsLimit', { required: true })}
                  type="text"
                  placeholder="$100,000"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Business Income Limit
                </label>
                <input
                  {...register('businessIncome')}
                  type="text"
                  placeholder="$50,000"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Deductible *
                </label>
                <select
                  {...register('deductible', { required: true })}
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400 bg-white"
                >
                  <option value="">Select...</option>
                  <option value="$1,000">$1,000</option>
                  <option value="$2,500">$2,500</option>
                  <option value="$5,000">$5,000</option>
                  <option value="$10,000">$10,000</option>
                </select>
              </div>
            </div>
            </div>
          </div>
        )}

        {/* Step 4: Additional Information */}
        {currentStep === 4 && (
          <div className="space-y-12">
            <div className="bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-900">
              <div className="flex items-center mb-6">
                <div className="w-12 h-12 bg-black rounded-xl flex items-center justify-center mr-4">
                  <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                  </svg>
                </div>
                <h2 className="text-3xl font-black text-black">Additional Information</h2>
              </div>
            
            <div className="space-y-6">
              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Additional Insureds
                </label>
                <textarea
                  {...register('additionalInsureds')}
                  rows={4}
                  placeholder="Optional"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400 resize-none"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Mortgagee / Loss Payee
                </label>
                <textarea
                  {...register('lossPayee')}
                  rows={4}
                  placeholder="Optional"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400 resize-none"
                />
              </div>

              <div>
                <label className="block text-sm font-black uppercase tracking-wide text-gray-700 mb-3">
                  Certificate Holders
                </label>
                <textarea
                  {...register('certificateHolders')}
                  rows={4}
                  placeholder="Optional"
                  className="w-full px-5 py-4 text-lg border-2 border-gray-300 rounded-xl focus:outline-none focus:border-black transition-all duration-200 font-medium hover:border-gray-400 resize-none"
                />
              </div>
            </div>
            </div>
          </div>
        )}

        {/* Step 5: Review */}
        {currentStep === 5 && (
          <div className="space-y-6">
            <div className="bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-900">
              <div className="flex items-center mb-8">
                <div className="w-12 h-12 bg-black rounded-xl flex items-center justify-center mr-4">
                  <svg className="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                </div>
                <h2 className="text-3xl font-black text-black">Review Application</h2>
              </div>
            
            <div className="space-y-4">
              <div className="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-black transition-all">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-black text-gray-900 text-lg">Property</h3>
                  <button type="button" onClick={() => setCurrentStep(0)} className="text-sm font-bold hover:underline">
                    Edit ‚Üí
                  </button>
                </div>
                <div className="space-y-2 text-sm">
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Address:</span>
                    <span className="font-bold">{watch('address')}</span>
                  </p>
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Ownership:</span>
                    <span className="font-bold">{watch('ownershipType')}</span>
                  </p>
                </div>
              </div>

              <div className="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-black transition-all">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-black text-gray-900 text-lg">Business</h3>
                  <button type="button" onClick={() => setCurrentStep(1)} className="text-sm font-bold hover:underline">
                    Edit ‚Üí
                  </button>
                </div>
                <div className="space-y-2 text-sm">
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Business:</span>
                    <span className="font-bold">{watch('businessName')}</span>
                  </p>
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Contact:</span>
                    <span className="font-bold">{watch('applicantName')}</span>
                  </p>
                </div>
              </div>

              <div className="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-black transition-all">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-black text-gray-900 text-lg">Property Details</h3>
                  <button type="button" onClick={() => setCurrentStep(2)} className="text-sm font-bold hover:underline">
                    Edit ‚Üí
                  </button>
                </div>
                <div className="space-y-2 text-sm">
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Square Footage:</span>
                    <span className="font-bold">{watch('buildingSquareFootage')}</span>
                  </p>
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Year Built:</span>
                    <span className="font-bold">{watch('yearBuilt')}</span>
                  </p>
                </div>
              </div>

              <div className="bg-gray-50 rounded-xl p-6 border-2 border-gray-200 hover:border-black transition-all">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-black text-gray-900 text-lg">Coverage</h3>
                  <button type="button" onClick={() => setCurrentStep(3)} className="text-sm font-bold hover:underline">
                    Edit ‚Üí
                  </button>
                </div>
                <div className="space-y-2 text-sm">
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Building:</span>
                    <span className="font-bold">{watch('buildingLimit')}</span>
                  </p>
                  <p className="flex justify-between">
                    <span className="text-gray-600 font-medium">Contents:</span>
                    <span className="font-bold">{watch('contentsLimit')}</span>
                  </p>
                </div>
              </div>
            </div>
            </div>
          </div>
        )}

        {/* Navigation */}
        <div className="flex justify-between items-center mt-12 pt-8">
          {currentStep > 1 && (
            <button
              type="button"
              onClick={prevStep}
              className="px-8 py-4 border-2 border-gray-900 rounded-xl hover:bg-gray-900 hover:text-white transition-all duration-200 font-bold text-lg"
            >
              ‚Üê Back
            </button>
          )}
          
          {currentStep < 5 ? (
            <button
              type="button"
              onClick={nextStep}
              className="ml-auto px-10 py-5 bg-black text-white rounded-xl hover:bg-gray-800 transition-all duration-200 font-bold text-lg tracking-wide uppercase shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
              Continue ‚Üí
            </button>
          ) : (
            <button
              type="submit"
              className="ml-auto px-10 py-5 bg-black text-white rounded-xl hover:bg-gray-800 transition-all duration-200 font-bold text-lg tracking-wide uppercase shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
            >
              üéâ Submit Application
            </button>
          )}
        </div>
      </form>
    </div>
  )
}

